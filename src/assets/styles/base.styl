// 颜色=================================
$baseColor=#00bbcc
$bgColor=#fff
$fontGray=#666
$darkTextColor=#333
//======================================

//大小==================================
$headerH=.86rem
//======================================

//头部样式===============================
headerStyl()
  position relative
  overflow hidden
  height $headerH
  line-height $headerH
  text-align center
  color #fff
  background $baseColor
  font-size .3rem
  font-weight bold
//======================================

// 输入框/搜索框样式=====================
inputStyl()
  box-sizing border-box
  width 100%
  height .62rem
  padding .1rem
  line-height .62rem
  border-radius .1rem
  text-align center
  color #666
//======================================